<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="/csss/home.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <div class="conten">
        <h1>List Products</h1>
    <a class="add" href="/auth/addProduct">
        <button >Add Product</button>
    </a>
    </div>
    
    <section class="content">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">ProductCode</th>
                    <th scope="col">ProductName</th>
                    <th scope="col">ProductDate</th>
                    <th scope="col">ProductOriginPrice</th>
                    <th scope="col">Quantity</th>
                    <th scope="col">ProductStoreCode</th>
                </tr>
                </thead>
                <tbody>
                    <% product.forEach((product)=>{ %>
                        <tr>
                            <th scope="row"></th>
                             <td><%- product.productCode %></td>
                             <td><%- product.productName %></td>
                             <td><%- product.productDate %></td>
                             <td><%- product.productOriginPrice %></td>
                             <td><%- product.quantity %></td>
                             <td><%- product.productStoreCode %></td>
                            <td>
                                <a href="/auth/product/delete/<%= product._id %>" class="btn btn-danger btn-sm">Delete</a>
                              </td>
                        </tr>
                    <% }) %>
                </tbody>
        </table>
      </section>
</body>
</html>
